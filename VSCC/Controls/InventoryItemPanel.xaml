<UserControl x:Class="VSCC.Controls.InventoryItemPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSCC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="64" Background="Transparent" AllowDrop="True" PreviewDrop="UserControl_PreviewDrop" Drop="UserControl_Drop" PreviewMouseDown="UserControl_PreviewMouseDown">
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5">
        <Grid>
            <Image x:Name="Picture" Source="{Binding PictureProperty}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="32" Height="32" Margin="16,0,0,0" />
            <Label x:Name="SName" Background="Transparent" Content="{Binding Name}" FontSize="8" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,26,0,0" Height="38" Width="64" />
        </Grid>
    </Border>
</UserControl>
